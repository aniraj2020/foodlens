<!DOCTYPE html>
<html>
<head>
  <title>Food Insecurity Insight</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      padding: 2rem;
    }
    .row {
      margin-bottom: 2rem;
    }
    #alertBox {
      display: none;
      padding: 1rem;
      background-color: #ef5350;
      color: white;
      border-radius: 8px;
      font-weight: bold;
      margin-top: 1rem;
    }
    canvas {
      max-width: 1000px;
      margin: 2rem auto;
    }
  </style>
</head>
<body class="container center-align">
  <h5>Food Insecurity Detailed Insight</h5>

  <div class="row">
    <div class="input-field col s6">
      <select id="categorySelect">
        <option value="" disabled selected>Select Demographic Category</option>
        <option value="gender">Gender</option>
        <option value="age_group">Age</option>
        <option value="suburb_group">Suburb</option>
      </select>
      <label>Select Demographic Category</label>
    </div>

    <div class="input-field col s6">
      <select id="groupSelect">
        <option value="" disabled selected>Select Group</option>
      </select>
      <label>Select Group</label>
    </div>
  </div>

  <div id="alertBox"></div>

  <div style="height: 1000px; width: 100%; display: flex; justify-content: center;">
    <canvas id="insightChart" style="max-width: 900px;"></canvas>
  </div>  

  <!-- Back Button -->
  <div class="center-align" style="margin-top: 2rem;">
    <a href="/" class="btn blue">Back to Home</a>
  </div>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var elems = document.querySelectorAll('select');
      M.FormSelect.init(elems);
    });
  </script>
  <script src="/script_insight.js"></script>
</body>
</html>
