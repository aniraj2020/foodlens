<!DOCTYPE html>
<html>
<head>
  <title>Food Insecurity Insight</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      padding: 2rem;
      background-color: #f9f9f9;
    }

    h5 {
      margin-bottom: 2rem;
    }

    .input-field select {
      background-color: white;
    }

    .chart-container {
      width: 100%;
      max-width: 1000px;
      margin: 2rem auto;
    }

    canvas {
      width: 100% !important;
      height: 400px !important;
    }

    .center-buttons {
      text-align: center;
      margin-top: 2rem;
    }

    #alertBox {
      display: none;
      padding: 1rem;
      background-color: #ef5350;
      color: white;
      border-radius: 8px;
      font-weight: bold;
      margin-top: 1rem;
    }
  </style>
</head>
<body class="container center-align">

  <h5>Food Insecurity Detailed Insight</h5>

  <!-- Dropdowns -->
  <div class="row">
    <div class="input-field col s6">
      <select id="categorySelect">
        <option value="" disabled selected>Select Demographic Category</option>
        <option value="gender">Gender</option>
        <option value="age_group">Age</option>
        <option value="suburb_group">Suburb</option>
      </select>
      <label>Select Demographic Category</label>
    </div>

    <div class="input-field col s6">
      <select id="groupSelect">
        <option value="" disabled selected>Select Group</option>
      </select>
      <label>Select Group</label>
    </div>
  </div>

  <div id="alertBox"></div>

  <!-- Chart -->
  <div class="chart-container">
    <canvas id="insightChart"></canvas>
  </div>

  <!-- Buttons -->
  <div class="center-buttons">
    <a href="/" class="btn blue">Back to Home</a>
    <button id="resetButton" class="btn orange darken-1" style="margin-left: 1rem;">Reset</button>
  </div>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      M.FormSelect.init(document.querySelectorAll('select'));
    });
  </script>
  <script src="/script_insight.js"></script>
</body>
</html>
