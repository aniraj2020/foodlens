<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title || "FoodLens" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />

  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #f9f9f9;
    }

    nav {
      padding: 0 30px;
    }

    footer {
      padding: 10px;
    }
  </style>
</head>
<body>

<%
// Header/footer toggle logic (default: show both)
const showHeader = typeof hideHeader !== "undefined" ? !hideHeader : true;
const showFooter = typeof hideFooter !== "undefined" ? !hideFooter : true;
%>

<% if (showHeader) { %>
  <!-- Navbar -->
  <nav class="black">
    <div class="nav-wrapper">
      <ul class="right">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/login">Login</a></li>
      </ul>
    </div>
  </nav>
<% } %>

<!-- Main Page Content -->
<div class="container" style="margin-top: 30px;">
  <%- body %>
</div>

<% if (showFooter) { %>
  <!-- Footer -->
  <footer class="black white-text center-align">
    &copy; 2025 FoodLens Team
  </footer>
<% } %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
