<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Combined Demographic Trends</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    body {
      padding: 2rem;
      background-color: #f9f9f9;
    }

    h5 {
      margin-bottom: 2rem;
    }

    .input-field select {
      background-color: white;
    }

    #checkboxes label {
      margin-right: 1rem;
      display: inline-block;
      margin-bottom: 1rem;
    }

    .chart-container {
      max-width: 1000px;
      margin: 2rem auto;
    }

    canvas {
      width: 100% !important;
      height: 400px !important;
    }

    .center-buttons {
      text-align: center;
      margin-top: 2rem;
    }

    #chartInstruction {
      margin-top: 1rem;
    }
  </style>
</head>
<body class="container center-align">
  <h5>Combined Demographic Trends Over Time</h5>

  <!-- Demographic Category Dropdown -->
  <div class="row">
    <div class="input-field col s12 m6 offset-m3">
      <select id="categorySelect">
        <option value="" disabled selected>Select Demographic Category</option>
        <option value="gender">Gender</option>
        <option value="age_group">Age</option>
        <option value="suburb_group">Suburb</option>
      </select>
      <label>Select Demographic Category</label>
    </div>
  </div>

  <!-- Dynamic Checkboxes -->
  <div id="checkboxes" class="center-align"></div>
  <p id="chartInstruction" class="grey-text text-darken-2"></p>

  <!-- Chart -->
  <div class="chart-container">
    <canvas id="trendChart"></canvas>
  </div>

  <!-- Reset and Back Buttons -->
  <div class="center-buttons">
    <a href="/" class="btn blue">Back to Home</a>
    <button id="resetButton" class="btn orange darken-1" style="margin-left: 1rem;">Reset</button>
  </div>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      M.FormSelect.init(document.querySelectorAll('select'));
    });
  </script>
  <script src="/script_combined_trends.js"></script>
</body>
</html>
